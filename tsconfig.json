{
  "compilerOptions": {
    "baseUrl": ".", // import 文を絶対パスで記述する。
    "paths": {
      "@/*": ["./src/*"] // よく使うパスにエイリアスをつける。  @/components が ./src/components
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "prisma/seed.mjs",
    "prisma/seed.mts",
    "src/pages/api/line.mts",
    "src/utils/seed.mjs"
  ],
  "exclude": ["node_modules"]
}
